.container
	.row
		.col-xs-10
			%ol.breadcrumb
				%li
					%a{ href: scuttlebutt.discussions_path }
						Discussions
				%li
					%a{ href: scuttlebutt.discussion_path( @discussion ) }
						= @discussion
				%li
					= @topic
		.col-xs-2
			%a.btn.btn-success{ href: '#new_post', data: { toggle: :modal, target: '#new_post' } }
				%i.fa.fa-plus
				Post
	= render 'scuttlebutt/discussion_topics/topic', topic: @topic, args: {}

	= raw paginate @posts

	- @posts.each do |post|
		= render 'scuttlebutt/discussion_posts/post', post: post, args: {}
	
	= raw paginate @posts


	%h4 Quick Reply
	= form_tag scuttlebutt.discussion_posts_path( topic_id: @topic.id ) do
		.form-group
			= text_area_tag :content, '', class: 'form-control auto-size', placeholder: ' '
		.form-group
			= submit_tag 'Add', class: 'btn btn-primary'


= render 'scuttlebutt/discussion_posts/new_modal'