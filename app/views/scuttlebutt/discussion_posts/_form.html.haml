= form_tag scuttlebutt.discussion_posts_path( topic_id: topic.id ) do
	.form-group.mb-1
		.form-control.form-control-wysiwyg-inline
			= text_area_tag :content, '', class: 'form-control wysiwyg-inline', placeholder: 'start typing...', data: { wysiwyg: { height_min: 50, toolbar_preset: 'comment', placeholder: 'start typing', object_class: topic.class.base_class.name, object_id: topic.id }.to_json }
	.form-group.mb-0
		= submit_tag 'Add', class: 'btn btn-primary'
